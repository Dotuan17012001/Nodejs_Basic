<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node js basic</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <!-- <%= dataUser %> -->
    <h2>List User Table</h2>

    <div class="content">
      <!-- table list user -->
      <table class="table-primary table table-bordered">
        <%= test123 %>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
        <!-- <%= dataUser.length %> -->
        <% for(let i=0; i < dataUser.length; i++) { %>
        <tr>
          <td><%= dataUser[i].id %></td>
          <td><%= dataUser[i].firstName %></td>
          <td><%= dataUser[i].lastName %></td>
          <td><%= dataUser[i].email %></td>
          <td><%= dataUser[i].address %></td>

          <td class="custom-btn">
            <button type="button" class="btn btn-success">
              <a href="/detail/user/<%= dataUser[i].id %>" target="_blank"
                >Detail</a
            >
            </button>

            
           <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                <button type="submit" class="btn btn-warning">Edit</button>
           </form>


            <form action="/delete-user" method="POST">
                <input type="text" hidden value="<%= dataUser[i].id %>" name="userIdDelete">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

          </td>
        </tr>
        <% } %>
      </table>
     
      <div class="create-user-container">
        <div>
          <div>CREATE A NEW USER</div>
           <!-- form add user -->
          <form action="/create-new-user" method="POST">
            <div>
              <label>First Name</label>
              <input type="text" name="firstName"/>
            </div>
            <div>
              <label>Last Name</label>
              <input type="text" name="lastName"/>
            </div>
            <div>
              <label>Email</label>
              <input type="email" name="email"/>
            </div>
            <div>
              <label>Address</label>
              <input type="text" name="address"/>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
